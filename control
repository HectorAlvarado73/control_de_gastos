<script>
// Funci칩n para calcular total de gastos y saldo disponible
function calcularSaldo() {
  const remuneracion = parseFloat(document.getElementById('remuneracion').value) || 0;
  let totalGastos = 0;
  
  document.querySelectorAll('.monto').forEach(input => {
    totalGastos += parseFloat(input.value) || 0;
  });
  
  document.getElementById('totalGastos').textContent = totalGastos.toFixed(2);
  document.getElementById('saldoDisponible').textContent = (remuneracion - totalGastos).toFixed(2);
  
  // Cambiar color seg칰n saldo
  const saldoElement = document.getElementById('saldoDisponible');
  const saldo = remuneracion - totalGastos;
  
  if(saldo < 0) {
    saldoElement.style.color = 'red';
    saldoElement.style.fontWeight = 'bold';
  } else if(saldo > 0) {
    saldoElement.style.color = 'green';
  } else {
    saldoElement.style.color = 'black';
  }
}

// Funci칩n para cambiar de mes
function actualizarTabla() {
  const mes = document.getElementById('mesSelector').value;
  alert(`Mostrando datos para ${mes}. En una implementaci칩n real, esto cargar칤a datos diferentes.`);
}

// Calcular al cargar la p치gina
window.onload = calcularSaldo;
</script>
